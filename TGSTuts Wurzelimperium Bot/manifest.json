{
  "manifest_version": 3,
  "name": "WurzelImperium Manager Pro",
  "version": "6.1",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.wurzelimperium.de/*"],
      "js": ["content.js"],
      "all_frames": true
    }
  ]
}